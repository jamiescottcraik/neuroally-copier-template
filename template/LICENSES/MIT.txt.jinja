{# This block extracts the copyright year from generated_on.
   It handles strings (YYYY-MM-DD), datetimes, or falls back to current year.
   If you break the date format, you get the scaffold year.
#}

{# -- Bulletproof: Handles string, datetime, or unknown junk -- #}
{%- if generated_on is defined -%}
  {%- if generated_on is string and generated_on|length >= 4 -%}
    {{ generated_on[:4] }}
  {%- elif generated_on is mapping and 'strftime' in generated_on -%}
    {{ generated_on.strftime('%Y') }}
  {%- else -%}
    {{ now().strftime('%Y') }}
  {%- endif -%}
{%- else -%}
  {{ now().strftime('%Y') }}
{%- endif %} {{ author_name }}

